{
  "name": "My EDPS Container",
  "settings": {
    "terminal.integrated.defaultProfile.linux": "bash",
    "terminal.integrated.shellArgs.linux": ["--login"]
  },
  "workspaceFolder": "/home/user",
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11",
      "installJupyterlab": true
    }
  },
  "build": {
    "dockerfile": "Dockerfile"
  },
  "postCreateCommand": "echo 'Ready!'",
  "postStartCommand": "chmod +x ./setup.sh; ./setup.sh",
  "forwardPorts": [7860],
  "portsAttributes": {
    "7860": {
      "label": "EDPS App",
      "visibility": "public"
    }
  }
}
