{
  "name": "My EDPS Container",
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.profiles.linux": {
    "bash": {
      "path": "/bin/bash",
      "args": ["--login"]
    }
  },
  "workspaceFolder": "/home/user",
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11",
      "installJupyterlab": true
    }
  },
  "build": {
    "dockerfile": "Dockerfile"
  },
  "postCreateCommand": "pwd ; bash /home/user/scripts/postCreateCommand.sh",
  "postStartCommand": "bash /home/user/postStartCommand.sh",
  "forwardPorts": [7860],
  "portsAttributes": {
    "7860": {
      "label": "EDPS App",
      "visibility": "public"
    }
  }
}
