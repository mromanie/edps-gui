{
  "name": "My EDPS Container",
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.profiles.linux": {
    "bash": {
      "path": "/bin/bash",
      "args": ["--login"]
    }
  },
  "workspaceFolder": "/home/user",
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11",
      "installJupyterlab": true
    }
  },
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-toolsai.jupyter",
        "ms-python.python"
      ]
    }
  },
  "postCreateCommand": "echo ciao ; /usr/local/python/current/bin/python3.11 -m pip install -r /home/user/requirements_notebooks.txt",
  "postStartCommand": "",
  "forwardPorts": [7860],
  "portsAttributes": {
    "7860": {
      "label": "EDPS App",
      "visibility": "public"
    }
  }
}
