{
  "name": "My EDPS Container",
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.profiles.linux": {
    "bash": {
      "path": "/bin/bash",
      "args": ["--login"]
    }
  },
  "workspaceFolder": "/home/user",
  "features":{},
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-toolsai.jupyter",
        "ms-python.python"
      ]
    }
  },
  "postCreateCommand": "dnf install -y python3-pip && pip3 install --upgrade pip jupyterlab",
  "postStartCommand": "",
  "forwardPorts": [7860],
  "portsAttributes": {
    "7860": {
      "label": "EDPS App",
      "visibility": "public"
    }
  }
}
